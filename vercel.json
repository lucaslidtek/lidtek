{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "dist/public/**"
                ]
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "server/api-entry.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/api-fallback.ts"
        }
    ]
}